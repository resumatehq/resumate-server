{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "~/*": ["src/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"], 
  },
  "lib": ["es2020"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "files": true
  },
  "files": ["src/type.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}